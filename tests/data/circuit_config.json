{
  "manifest": {
    "$BASE_DIR": ".",
    "$COMPONENT_DIR": "$BASE_DIR",
    "$NETWORK_DIR": "./"
  },
  "components": {
    "biophysical_neuron_models_dir": "$COMPONENT_DIR/biophysical_neuron_models",
    "morphologies_dir": "$COMPONENT_DIR/morphologies"
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "networks": {
    "nodes": [
      {
        "nodes_file": "$NETWORK_DIR/nodes.h5",
        "populations": {
            "default": {
                "type": "biophysical",
                "spatial_index_dir": "path/to/node/dir"
            },
            "default2": {
                "type": "biophysical",
                "spatial_index_dir": "path/to/node/dir2"
            }
        }
      }
    ],
    "edges": [
      {
        "edges_file": "$NETWORK_DIR/edges.h5",
        "populations": {
            "default":{
                "type": "chemical",
                "spatial_index_dir": "path/to/edge/dir"
            },
            "default2":{
                "type": "chemical",
                "spatial_index_dir": "path/to/edge/dir2"
            }
        }
      }
    ]
  }
}
